<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="write phone number here..."
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:drawableStart="@drawable/phone"
        >


    </EditText>

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_below="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="write verification code here.."
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/inputs"
        android:padding="5dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/password"
        android:textAlignment="center"
         android:visibility="invisible"
        >


    </EditText>
    <Button
        android:id="@+id/send_var_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/verification_code_input"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        >

    </Button>
    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/send_var_code_button"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:visibility="invisible"
        >

    </Button>

</RelativeLayout>